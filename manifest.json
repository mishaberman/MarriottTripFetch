{
  "manifest_version": 3,
  "name": "Marriott Trip Extractor",
  "version": "1.0",
  "description": "Automatically extracts Marriott reservation details from your logged-in account",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.marriott.com/*",
    "*://*.marriott.co.uk/*",
    "*://*.marriott.ca/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.marriott.com/*",
        "*://*.marriott.co.uk/*",
        "*://*.marriott.ca/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Marriott Trip Extractor"
  }
}